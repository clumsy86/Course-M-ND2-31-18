@model ITNews.Web1.Models.PostViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <input type="hidden" id="postId" value="@Model.Id" />
            <input type="hidden" id="userId" value="@ViewBag.UserId" />
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dd>
            @Html.Raw(Model.Content)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
    <div class="row">
        <div class=" col-md-2">

        </div>
        <div class="col-md-6">

            @if (Model.FullName.FirstName == "Empty" || Model.FullName.LastName == "Empty" || Model.FullName.LastName == null || Model.FullName.FirstName == null)

            {
                <p><span><strong>Post created @Model.Created.ToShortDateString()</strong></span> </p> <p><span> <strong> By @Model.User.UserName</strong></span> </p>
            }
            else
            {
                <p><span><strong>Post created @Model.Created.ToShortDateString()</strong></span> </p> <p><span> <strong> By @Model.FullName.FirstName @Model.FullName.LastName </strong></span></p>
            }
        </div>
    </div>
</div>





<div class="container">
    <div class="row">
        <h3>Comments</h3>
        <div class="col-md-2" style="padding-left:unset"><h5>Add your comment</h5></div>
        <div class="col-md-6">
            <input type="hidden" id="userName" value=@ViewBag.Username />
            <textarea rows="4" cols="50" id="messageInput"></textarea>
            <div>
                <input type="button" id="sendButton" value="Add" />
            </div>
        </div>
    </div>
    <br />

    <div class="comments">
        @await Component.InvokeAsync("Comments", new { id = Model.Id })
    </div>

    <div id="target"></div>

    <script id="hidden-template" type="text/x-custom-template">
        <div class="container">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <section class="post-heading">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="media">
                                        <div class="media-body">
                                            <a href="#" class="anchor-username"><h6 class="media-heading">@ViewBag.Username </h6></a>
                                            <span >@DateTime.Now.ToShortDateString()</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <section class="post-body"><br /> <p id="1">comment</p></section>
                        <section class="post-footer" style="margin:unset">
                            <div class="post-footer-option container">
                                <ul class="list-unstyled">
                                    <li>
                                        <button type="button" class="btn btn-default btn-sm">
                                            <span class="glyphicon glyphicon-thumbs-up"></span> Like
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </script>
</div>
    <script src="~/lib/aspnet/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/test.js"></script>
<br/>
